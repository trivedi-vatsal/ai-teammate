{
  "name": "ai-teammate-pr-review",
  "version": "1.0.0",
  "description": "AI-powered pull request reviews using Azure OpenAI",
  "main": "dist/index.js",
  "scripts": {
    "build": "node scripts/build.js",
    "build:test": "node scripts/build-test.js",
    "build:ncc": "ncc build src/index.js -o dist",
    "test": "jest --testPathPattern=tests/",
    "test:watch": "jest --watch --testPathPattern=tests/",
    "dev": "node src/index.js",
    "check-config": "node scripts/check-azure-config.js",
    "prepare-release": "node scripts/prepare-release.js",
    "prepare": "husky install"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@azure/openai": "^1.0.0-beta.8",
    "@octokit/action": "^6.0.1"
  },
  "devDependencies": {
    "@vercel/ncc": "^0.38.1",
    "dotenv": "^16.3.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "keywords": [
    "github-actions",
    "ai",
    "code-review",
    "azure-openai",
    "pull-request",
    "automation"
  ],
  "author": "Vatsal Trivedi <trivedivatsal005@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/trivedi-vatsal/ai-teammate.git"
  },
  "bugs": {
    "url": "https://github.com/trivedi-vatsal/ai-teammate/issues"
  },
  "homepage": "https://github.com/trivedi-vatsal/ai-teammate#readme",
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}
